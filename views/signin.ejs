<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs') %>
    <title>Sign In</title>
    <link rel="icon" href="https://res.cloudinary.com/dzgdttbuq/image/upload/c_limit,w_100,h_100,q_auto,f_auto/bloglogo_teaatt.png" type="image/png">
</head>

<body class="min-h-screen bg-gray-900 text-white flex flex-col">
    <%- include('./partials/error.ejs') %>

    <section class="flex-grow flex items-center justify-center">
        <div class="container px-6 py-8 mx-auto">
            <div class="flex flex-col lg:flex-row items-center justify-between gap-10">
                <!-- Logo and Welcome Text -->
                <div class="lg:w-1/2 text-center lg:text-left flex flex-col items-center lg:items-start justify-center">
                    <div class="flex items-center justify-center lg:justify-start space-x-3 mb-4">
                        <img class="w-auto h-10 sm:h-12" src="/images/bloglogo.png" alt="Logo">
                        <span class="text-3xl sm:text-4xl font-bold text-white">BloggerSpot</span>
                    </div>

                    <p class="text-gray-300 md:text-lg">Welcome Back</p>

                    <h1 class="mt-2 text-xl sm:text-2xl font-medium capitalize lg:text-3xl text-white">
                        Sign in to your account
                    </h1>
                </div>

                <!-- Sign In Form -->
                <div class="w-full lg:w-1/2">
                    <form class="w-full lg:max-w-xl space-y-6" action="/user/signin" method="POST">
                        <!-- Email -->
                        <div class="relative flex items-center">
                            <span class="absolute left-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </span>
                            <input type="email" name="email" required placeholder="Email address"
                                class="block w-full py-3 pl-12 pr-4 text-gray-300 bg-gray-900 border border-gray-600 rounded-lg focus:border-blue-400 focus:ring focus:ring-blue-300 focus:outline-none focus:ring-opacity-40" />
                        </div>

                        <!-- Password -->
                        <div class="relative flex items-center">
                            <span class="absolute left-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                            </span>
                            <input type="password" name="password" required placeholder="Password"
                                class="block w-full py-3 pl-12 pr-4 text-gray-300 bg-gray-900 border border-gray-600 rounded-lg focus:border-blue-400 focus:ring focus:ring-blue-300 focus:outline-none focus:ring-opacity-40" />
                        </div>

                        <!-- Submit -->
                        <div class="pt-4 flex flex-col items-center md:flex-row md:items-center md:justify-start">
                            <button type="submit"
                                class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg md:w-1/2 hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                                Sign in
                            </button>

                            <a href="/user/signup"
                                class="inline-block mt-4 text-center text-blue-400 md:mt-0 md:mx-6 hover:underline">
                                Don't have an account yet?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
